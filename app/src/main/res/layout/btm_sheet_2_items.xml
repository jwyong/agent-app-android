<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_corner_top_5dp"
    android:backgroundTint="@color/white"
    android:orientation="vertical"
    android:paddingStart="@dimen/dialog_padding_hori"
    android:paddingTop="@dimen/dialog_padding_verti"
    android:paddingEnd="@dimen/dialog_padding_hori"
    android:paddingBottom="@dimen/dialog_padding_verti">

    <!--btn 1-->
    <Button
        android:id="@+id/btn_1"
        style="@style/normalBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primaryLight4"
        android:text="@string/camera" />

    <!--btn 2-->
    <Button
        android:id="@+id/btn_2"
        style="@style/normalBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primaryDark3"
        android:text="@string/gallery" />

</LinearLayout>
