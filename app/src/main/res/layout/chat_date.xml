<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="var"
            type="sg.com.agentapp.sql.entity.Message" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chatroom_selection"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/chat_log_grp_status_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/xml_roundcorner_grey1_30dp"
            android:backgroundTint="@color/grey6"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="@{var.getDateHeader}"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:text="date" />
    </LinearLayout>

</layout>